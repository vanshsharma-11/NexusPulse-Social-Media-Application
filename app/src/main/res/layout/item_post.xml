<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    app:cardBackgroundColor="@color/black"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <!-- Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userProfileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:shapeAppearanceOverlay="@style/CircleImageStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Username -->
        <TextView
            android:id="@+id/usernameText"
            style="@style/UsernameTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="4dp"
            android:text="Username"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/userProfileImage"
            app:layout_constraintTop_toTopOf="@id/userProfileImage"
            app:layout_constraintEnd_toStartOf="@id/ivVerifiedBadge"/>

        <!-- ✅ VERIFICATION BADGE -->
        <ImageView
            android:id="@+id/ivVerifiedBadge"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_verified"
            android:contentDescription="Verified"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/usernameText"
            app:layout_constraintBaseline_toBaselineOf="@id/usernameText"/>


        <!-- Handle -->
        <TextView
            android:id="@+id/handleText"
            style="@style/HandleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@handle"
            android:maxLines="1"
            app:layout_constraintBaseline_toBaselineOf="@id/usernameText"
            app:layout_constraintEnd_toStartOf="@id/timeText"/>

        <!-- Time -->
        <TextView
            android:id="@+id/timeText"
            style="@style/HandleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" · 2h"
            app:layout_constraintBaseline_toBaselineOf="@id/usernameText"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Tweet Content -->
        <TextView
            android:id="@+id/tweetContent"
            style="@style/TweetContentStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tweet content goes here"
            app:layout_constraintStart_toStartOf="@id/usernameText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usernameText"/>

        <!-- Post Image Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="@id/tweetContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tweetContent">

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Post image"/>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/tweetContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageContainer">

            <!-- Reply -->
            <LinearLayout
                android:id="@+id/replyButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/ic_menu_send"
                    app:tint="@color/gray_text"/>

                <TextView
                    android:id="@+id/replyCount"
                    style="@style/ActionCounterStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Retweet -->
            <LinearLayout
                android:id="@+id/retweetButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/retweetIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/ic_menu_rotate"
                    app:tint="@color/gray_text"/>

                <TextView
                    android:id="@+id/retweetCount"
                    style="@style/ActionCounterStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Like -->
            <LinearLayout
                android:id="@+id/likeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="@color/gray_text"/>

                <TextView
                    android:id="@+id/likeCount"
                    style="@style/ActionCounterStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Delete Button (replaces Share) -->
            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@color/gray_text"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Bottom Divider -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider_gray"
            app:layout_constraintStart_toStartOf="@id/tweetContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionButtons"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
